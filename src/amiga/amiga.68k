* < D0: required size
* < D1: 0 any, 1 chip
* > d0: allocated block
allocate_memory:
	movem.l	d2-d4/a0-a1,-(a7)
	tst.b	d1
	jeq		0f
	lea		chip_memory_block,a0
	lea		chip_memory_current_ptr,a1
	move.l	#TOTAL_CHIP_MEMORY_SIZE,d3
	jra		1f
